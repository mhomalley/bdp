  %h2
    %b
      Or click on a Day, a Month or a Year in order to find a particular issue.
  %br/
  %br/
  %h2
    %b
      Days:
  %table
    - for date in @days
      %tr
        %td
          = link_to(date.strftime('%A, %B %d, %Y'), public_issue_path(:issue_id => "#{date.strftime('%Y-%m-%d')}"))
  %br/
  %br/
  %h2
    %b
      Months:
  %table
    %tr
      - for month in @months
        %td{:align=>"center"}
          - if month == @mo
            = mo2name(@mo)
          - else
            = link_to(mo2name(month), public_archives_path(:yr => @yr, :mo => month))
          &nbsp;
  %br/
  %br/
  %h2
    %b
      Years:
  %table
    %tr
      - for year in @years
        %td{:align=>"center"}
          - if year == @yr
            = "20#{year}"
          - else
            = link_to("20#{year}", public_archives_path(:yr => year))
  %br
